{
  "name": "@easemate/web-kit",
  "version": "0.3.3",
  "description": "UI kit of web components for easemate - a typescript animation library",
  "type": "module",
  "files": [
    "build"
  ],
  "sideEffects": true,
  "scripts": {
    "clean": "rm -rf build",
    "build": "npm run clean && tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src test",
    "lint:fix": "biome check src test --write",
    "format": "biome format src test",
    "format:fix": "biome format src test --write",
    "typecheck": "tsc --noEmit",
    "prepare": "tsup"
  },
  "keywords": [
    "ui",
    "web-components",
    "typescript",
    "animation",
    "controls",
    "leva",
    "lil-gui"
  ],
  "author": "Aaron Iker",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/easemate/web-kit.git"
  },
  "bugs": {
    "url": "https://github.com/easemate/web-kit/issues"
  },
  "homepage": "https://github.com/easemate/web-kit#readme",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "lit-html": "^3.2.1"
  },
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.cjs"
    },
    "./elements": {
      "types": "./build/elements.d.ts",
      "import": "./build/elements.js",
      "require": "./build/elements.cjs"
    },
    "./decorators": {
      "types": "./build/decorators.d.ts",
      "import": "./build/decorators.js",
      "require": "./build/decorators.cjs"
    },
    "./utils": {
      "types": "./build/utils.d.ts",
      "import": "./build/utils.js",
      "require": "./build/utils.cjs"
    },
    "./theme": {
      "types": "./build/theme.d.ts",
      "import": "./build/theme.js",
      "require": "./build/theme.cjs"
    },
    "./react": {
      "types": "./build/react.d.ts",
      "import": "./build/react.js",
      "require": "./build/react.cjs"
    },
    "./react/jsx": {
      "types": "./build/jsx.d.ts",
      "import": "./build/jsx.js",
      "require": "./build/jsx.cjs"
    },
    "./register": {
      "types": "./build/register.d.ts",
      "react-server": {
        "types": "./build/register.server.d.ts",
        "import": "./build/register.server.js",
        "require": "./build/register.server.cjs"
      },
      "node": {
        "types": "./build/register.server.d.ts",
        "import": "./build/register.server.js",
        "require": "./build/register.server.cjs"
      },
      "import": "./build/register.js",
      "require": "./build/register.cjs"
    }
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "main": "./build/index.cjs",
  "types": "./build/index.d.ts",
  "module": "./build/index.js",
  "devDependencies": {
    "@swc/core": "^1.10.1",
    "@types/react": "^19.0.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.0",
    "unplugin-swc": "^1.5.1"
  }
}
