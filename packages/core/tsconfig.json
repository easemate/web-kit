{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": false,
    "baseUrl": ".",
    "types": ["react"],
    "paths": {
      "@/*": ["./src/decorators/*"],
      "~/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules"]
}
